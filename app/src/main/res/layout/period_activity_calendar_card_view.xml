<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:id="@+id/period_activity_calendar_card_layout"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/period_calendar_label_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_two"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/period_icon_calendar"
            android:layout_width="@dimen/fourty"
            android:layout_height="@dimen/fourty"
            android:layout_marginLeft="@dimen/sixteen"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/sixteen"
            android:scaleType="fitCenter"
            android:src="@drawable/water" />

        <TextView
            android:id="@+id/period_calendar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/seventy_two"
            android:text="@string/period_title"
            android:contentDescription="@string/period_title"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/period_calendar_label_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four"
                android:layout_marginBottom="@dimen/sixteen"
                android:layout_marginRight="@dimen/sixteen"
                android:id="@+id/period_calendar_description"
                android:text="@string/period_description"
                android:contentDescription="@string/period_description"
                android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>